<?xml version="1.0"?>
<psalm
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://getpsalm.org/schema/config"
        xsi:schemaLocation="https://getpsalm.org/schema/config file:///Volumes/dev/php-playground/vendor/vimeo/psalm/config.xsd"
        totallyTyped="true"
        strictBinaryOperands="true"
        allowPhpStormGenerics="true"
        errorBaseline="psalm-baseline.xml"
        cacheDirectory=".psalm-cache"

>
    <projectFiles>
        <directory name="."/>
        <ignoreFiles>
            <directory name=".git"/>
            <directory name=".phpstorm.meta.php"/>
            <directory name=".psalm-cache"/>
            <directory name="vendor"/>
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <LessSpecificReturnType errorLevel="info"/>
    </issueHandlers>
</psalm>
